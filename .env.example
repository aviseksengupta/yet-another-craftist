# Todoist API Token (get from https://todoist.com/prefs/integrations)
TODOIST_TOKEN=your_todoist_token_here

# Craft API Base URL (from your Craft.do API link)
CRAFT_API_BASE_URL=https://connect.craft.do/links/YOUR_ID/api/v1

# Database path
DATABASE_PATH=./sync_data.db

# Sync interval in seconds (300 = 5 minutes, 600 = 10 minutes)
SYNC_INTERVAL=300

# Conflict detection window in seconds
CONFLICT_WINDOW=3
